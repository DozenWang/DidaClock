<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.widgetclock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />
    
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_widget_analog_clock"
        android:label="@string/app_name"
         >
        <activity
            android:name="com.example.widgetclock.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver
            android:name="com.example.widgetclock.ClockWidgetProvider"
            android:icon="@drawable/ic_widget_analog_clock"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            
   <!--          <intent-filter>
                <action android:name="com.dozen.action.APPWIDGET_UPDATE" />
            </intent-filter> -->

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/deskclock_widget" />
        </receiver> 
        
        <activity
            android:name="com.example.cropimage.CropPhotoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent.NoTitle"
            >
        </activity>
               
        <activity
            android:name="com.example.timezone.TimezoneListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light"
            >
        </activity>
        
         <receiver
            android:name="com.example.widgetclock.WidgetChangedReceiver"
             >
            <intent-filter>
                <action android:name="com.dozen.PHOTO_CHANGED_ACTION" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.dozen.TIMEZONE_CHANGED_ACTION" />
            </intent-filter>
        </receiver> 
        
         
        
        
        <!--                    umeng                         -->
        <activity android:name="com.umeng.fb.ConversationActivity"
         android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name="com.umeng.fb.ContactActivity"
         android:theme="@android:style/Theme.NoTitleBar"/>
        <meta-data android:value="53f9845efd98c585b2048000" android:name="UMENG_APPKEY"></meta-data>
        <meta-data android:value="1000" android:name="UMENG_CHANNEL"/> <!-- 1000 debug ç‰ˆ -->

    </application>

</manifest>
